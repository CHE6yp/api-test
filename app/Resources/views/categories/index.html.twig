{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <h1>Categories list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="list">
                {% for category in categories %}
                    <tr>
                        <td><a href="{{ path('admin_categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                        <td>{{ category.category }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_categories_show', { 'id': category.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_categories_edit', { 'id': category.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_categories_new') }}">Create a new category</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
