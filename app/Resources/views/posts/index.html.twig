{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <h1>Posts list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Text</th>
                        <th>Authorid</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td><a href="{{ path('admin_posts_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.text }}</td>
                        <td>{{ post.authorId }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_posts_show', { 'id': post.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_posts_edit', { 'id': post.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_posts_new') }}">Create a new post</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
